<h1>Edit question</h1>
<%= form_for @question do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :text %><br/>
	<%= f.text_field :text %>
  </div>
  <div class="field">
      <%= f.label :weight %><br/>
      <%= f.radio_button :weight, 1 %>1
      <%= f.radio_button :weight, 2 %>2
      <%= f.radio_button :weight, 3 %>3
      <%= f.radio_button :weight, 4 %>4
      <%= f.radio_button :weight, 5 %>5
  </div>
    <%= f.hidden_field :problem_id, :value => @problem.id %>
  <div class="actions">
	<%= f.submit "Submit" %>
  </div>
<% end %>