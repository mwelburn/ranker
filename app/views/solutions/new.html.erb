<%= form_for [@problem, @solution] do |f| %>
  <h2>New solution for <%= link_to @problem.name, @problem %></h2>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %>
	<%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :comment %>
	<%= f.text_field :comment %>
  </div>
  <div class="actions">
	<%= f.submit "Submit" %>
  </div>
<% end %>