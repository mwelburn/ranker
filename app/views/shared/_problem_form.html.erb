<%= form_for @problem do |f| %>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %><br/>
	<%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :comment %><br/>
	<%= f.text_area :comment %>
  </div>
  <div class="actions">
	<%= f.submit "Submit" %>
  </div>
<% end %>