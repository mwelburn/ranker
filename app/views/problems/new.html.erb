<%= form_for @problem do |f| %>
  <h2>New Problem</h2>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %>
	<%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :comment %>
	<%= f.text_field :comment %>
  </div>
  <%= f.hidden_field :is_template %>
  <%= f.hidden_field :template_id %>
  <div class="actions">
	<%= f.submit "Submit" %>
  </div>
<% end %>