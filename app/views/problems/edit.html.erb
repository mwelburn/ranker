<%= form_for @problem do |f| %>
  <h2>Edit Problem</h2>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %>
	<%= f.text_field :name %>
  </div>
  <div class="field">
    <%= f.label :comment %>
	<%= f.text_field :comment %>
  </div>
  <%= f.hidden_field :is_template %>
  <div class="actions">
	<%= f.submit "Update" %>
  </div>
  <p><%= link_to "Delete", problem_path(@problem), :confirm => "Are you sure?", :method => :delete %></p>
<% end %>