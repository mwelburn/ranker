<ul class="breadcrumb">
  <li><%= link_to "Home", root_path %><span class="divider">/</span></li>
  <li><%= link_to @problem.name, @problem %><span class="divider">/</span></li>
  <li class="active">Edit</li>
</ul>

<%= form_for @problem, :html => {:class => "form-stacked"} do |f| %>
  <h2>Edit Problem</h2>
  <%= render 'shared/error_messages', :object => f.object %>
  <div class="field">
    <%= f.label :name %>
	<%= f.text_field :name, :class => "span6" %>
  </div>
  <div class="field">
    <%= f.label :comment %>
	<%= f.text_area :comment, :class => "span6" %>
  </div>
  <%= f.hidden_field :is_template %>
  <div class="well">
	<%= f.submit "Update", :class => "btn large primary span2" %>
    <%= link_to "Delete", problem_path(@problem), :class => "btn large danger", :confirm => "Are you sure?", :method => :delete %>
  </div>
<% end %>